extends layout

block main-content
  #restaurant
    h1 #{restaurant.details.name}
    #res-info 
      - let imagePath = "/images/Default.png";
      - let altTest = "No Image";
      - if (restaurant.details.img) imagePath = restaurant.details.img;
      - if (restaurant.details.img) altTest = `Food in ${restaurant.details.name}`;
      img.res-image(src=imagePath, alt=altTest)
      div#res-detail
        if restaurant.details.googleRating
          p Google Rating: #{restaurant.details.googleRating} #{restaurant.details.googleReview}
        if restaurant.details.yelpRating
          p Yelp Rating: #{restaurant.details.yelpRating} #{restaurant.details.yelpReview}
    #res-review 
      h2 Reviews
      if restaurant.googleReviews
        each review in restaurant.googleReviews 
          .google-review
            h3 Google Review: #{review.userName}
            p Rating: #{review.rating}
            p Comment: #{review.text}
      if restaurant.yelpReviews
        each review in restaurant.yelpReviews 
          .yelp-review
            h3 Yelp Review: #{review.userName}
            p Rating: #{review.rating}
            p Comment:#{review.text}